<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.stage.Stage?>

<?import javafx.scene.control.CheckBox?>
<Stage title="Noise generator" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <AnchorPane prefHeight="300.0" prefWidth="500.0">
            <children>
               <BorderPane prefHeight="300.0" prefWidth="500.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <padding>
                     <Insets bottom="5.0" />
                  </padding>
                  <center>
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Scene says hello!" BorderPane.alignment="CENTER" />
                  </center>
                  <top>
                     <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                        <children>
                           <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Seed:" />
                           <TextField disable="true" HBox.hgrow="ALWAYS" />
                           <Button alignment="CENTER" mnemonicParsing="false" text="⟳" />
                        </children>
                     </HBox>
                  </top>
                  <bottom>
                     <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" BorderPane.alignment="CENTER">
                        <opaqueInsets>
                           <Insets bottom="5.0" />
                        </opaqueInsets>
                        <children>
                           <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="⤌" />
                           <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="⤍" />
                           <!-- XML-kommentti kirjoitetaan näin -->
                           <!-- tämän lisäski muokkasin 36 rivin spacing arvoa 5 -> 50-->
                           <CheckBox alignment="CENTER" contentDisplay="CENTER" text="Hey! Check me out!"/>
                        </children>
                        <padding>
                           <Insets bottom="5.0" />
                        </padding>
                     </HBox>
                  </bottom>
               </BorderPane>
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
